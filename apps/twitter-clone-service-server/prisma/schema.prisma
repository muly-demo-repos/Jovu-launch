datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  bio        String?
  createdAt  DateTime @default(now())
  email      String?
  id         String   @id @default(cuid())
  likes      Like[]
  password   String?
  profilePic Json?
  tweets     Tweet[]
  updatedAt  DateTime @updatedAt
  username   String?
}

model Follow {
  createdAt DateTime @default(now())
  follower  String?
  following String?
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
}

model Tweet {
  content   String?
  createdAt DateTime @default(now())
  hashtag   Hashtag? @relation(fields: [hashtagId], references: [id])
  hashtagId String?
  id        String   @id @default(cuid())
  likes     Like[]
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model Like {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  tweet     Tweet?   @relation(fields: [tweetId], references: [id])
  tweetId   String?
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model Hashtag {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  name      String?
  tweets    Tweet[]
  updatedAt DateTime @updatedAt
}
